package chap07_class.circle;

public class Circle {


	double PI = 3.14;
	int radius;
	
	public Circle() {
		
	}

	public Circle(int num) {
		this.radius = radius; 
	}
	
	public double circumferenceOrCircle () {
		double result;
		result = (double)(2 * PI * radius);
		return result;
	}
	
	public double areaOfCircle () {
		double result;
		result = (double)(PI * radius * radius);
		return result;
	}
	
}
