package chap07_class.circle;

public class Circle {

	public final double PI = 3.14; // 상수는 final
	public int radius;
	
	public Circle() {
	}

	public Circle(int radius) {   // radius 값에 따라서 달라지는 것을 초기화함
		this.radius = radius; 
	}
	
	public double round() {       // 
		return 2 * PI * radius;
	}
	
	public double area () {
		return  PI * radius * radius;
	}
	
}
