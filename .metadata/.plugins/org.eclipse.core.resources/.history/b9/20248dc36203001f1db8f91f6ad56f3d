package chap02_variables;

public class _01_Variables {

	public static void main(String[] args) {
		
		// 1. 변수의 선언
		// 1-1. 변수의 선언은 자료형 + 변수명
		// 종하요 개수를 저장하는 변수
		int likeCnt;
		// 로그인 사용자가 좋아요를 눌렀는지 여부를 저장하는 변수
		boolean isUserLike;
		
		
		// 1-2. 변수명 첫 글자는 문자, $, _만 허용된다.
		int price;
		int _bit;
		int $company;
		
		
		// 문자, $, _가 아닌 다른 기호, 숫자가 첫 글자로 오면 에러가 발생한다.
		// 단일 행 주석처리: ctrl + /
		// 다중 행 주석처리: ctrl + shift + /
//		int 1price;
//		int @bit;
//		int %company;
		
		
		// 1-3. 카멜케이스 표기법 사용
		// 게시물 개수
		int boardCnt;
		//출력횟수
		int printCnt;
		
		
		// 1-4. 대소문자를 구분한다.
		int lunchTime;
		int luNchTime;
		int lunchtime;
		
		
		// 1-5. 본인만 알아볼 수 있는 변수명을 사용하지 않는다.
		int nuri;
		int aaa;
		int bbb;
		
		// 2. 변수의 사용
		// 2-1. 변수에 값 저장(할당)
		// 변수에 값을 최초로 저장하는 것을 초기화라고 한다.
		// syso + ctrl + space + enter(이클립스)
		// sout(인텔리제이)
		likeCnt = 1500;
		System.out.println(likeCnt);
		
		// 변수의 값 재할당(값의 변경)
		likeCnt = 100;
		System.out.println(likeCnt);
		
		// 2-2. 변수의 선언과 동시에 초기화
		int studentCnt = 29;
		
		// 2-3. 선언된 변수에는 지정된 자료형의 값만 저장할 수 있다.
//		studentCnt = 11.11;
		
		// 2-4. 초기화(값이 저장되지 않은)되지 않은 변수를 사용하면 에러가 발생한다.
		int errorVal;
//		System.out.println(errorVal);
		
		// 2-5. 데이터 타입이 같으면 여러개의 변수의 선언 및 초기화 가능하다.
		// 2-6. 데이터 타입이 같으면 변수명이 달라도 한번에 선언 및 초키화 가능하다.
		int num1=1, num2=2, num3=3;
		int num4=100, time=3;
		System.out.println(num1 + num2);
		System.out.println(num4 + time);
		
		// 부동소수점: 10진수를 2진수로 변환하는 과정에서 생긴    해결방안: BigDecimal
		// 고정소수점: 
		System.out.println(1.1 + 0.1); //1.2000000000002

		
	}

}
